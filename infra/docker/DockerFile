# ---------- Build stage: install Python deps ----------
FROM python:3.11-slim-bookworm AS builder

WORKDIR /app

# Minimal build deps (kept only in this stage)
RUN apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements-api.txt .

# Install deps into user site-packages and clean tests/pyc to shrink size
RUN pip install --user --no-cache-dir -r requirements-api.txt && \
    find /root/.local \
      \( -type d -name "tests" -o -name "test" \) -prune -o \
      \( -type f -name "*.pyc" -o -name "*.pyo" \) -exec rm -f '{}' +

# ---------- Runtime stage: lean image for serving ----------
FROM python:3.11-slim-bookworm

WORKDIR /app

# Runtime OS deps only (libgomp1 is required by xgboost)
RUN apt-get update && apt-get install -y --no-install-recommends \
        libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy only installed Python deps from builder
COPY --from=builder /root/.local /root/.local

# Copy API code and model
COPY src ./src
COPY models ./models

ENV PYTHONPATH=/app/src
ENV PATH="/root/.local/bin:${PATH}"

EXPOSE 8000

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
